<footer class="footer bg-gradientA text-black">
  <div class="inn max-[1020px]:px-0 px-10 w-full max-w-full bg-[#00000033]">
    <div class="w-full flex flex-col gap-4 p-6 md:p-14 justify-center">
      <div class="flex flex-col w-full gap-8">
        <div
          class="info flex flex-col gap-3 md:max-w-[350px] sm:max-w-[200px] max-w-full"
        >
          <Logo color="black" />
        </div>
        <div class="row flex justify-between gap-4 flex-wrap gap-y-6">
          {
            footer_links.map((nim, index) => {
              return (
                <div class="info flex flex-col gap-3">
                  <span class="top font-bold text-[105%]">{nim.header}</span>
                  <ul class="flex gap-2 flex-col">
                    {nim.subLinks.map((e) => (
                      <li class="font-medium">
                        <a href={AppInfo.main_site_url + e.link}>{e.name}</a>
                      </li>
                    ))}
                  </ul>
                </div>
              );
            })
          }
        </div>
      </div>
      <Divider className="my-14 p-0.5 rounded-full bg-black" />
      <div
        class="flex justify-between gap-4 flex-wrap items-center mx-auto w-full max-[640px]:justify-center"
      >
        <div class="flex gap-4 flex-col max-[450px]:items-center">
          <p class="text-lg font-semibold">Stay Connected</p>
          <Socials />
        </div>
